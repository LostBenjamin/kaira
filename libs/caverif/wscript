source_files = (
    "analyses.cpp",
    "statespace.cpp"
)

def build(ctx):
    if not ctx.env.HAVE_VERIF:
        return
    ctx.stlib(source=source_files,
              target="caverif",
              includes="../cailie",
              name="caverif")
    if ctx.env.HAVE_MPI:
        env = ctx.all_envs["mpi"]
        ctx.stlib(source=source_files,
                  target="caverifmpi",
                  includes="../cailie",
                  cxxflags="-DCA_MPI",
                  name="caverifmpi",
                  env=env)
